@model NEWAPP.Models.city
@{
	ViewData["Title"] = "City";

}
<div class="container">
	<div class="container">
		<div class="form-group col-md-offset-3 col-md-5">
			<h1>Forecast For Selected City</h1>
			<label asp-for="Name">Name</label>
			<span class="badge alert-primary">@Model.Name</span><br />

			<label asp-for="Temperature">Temperature </label>
			<span class="badge alert-primary">@Model.Temperature</span><br />

			<label asp-for="Humidity">Humidity</label>
			<span class="badge alert-primary">@Model.Humidity</span><br />

			<label asp-for="Pressure">Pressure</label>
			<span class="badge alert-primary">@Model.Pressure </span><br />

			<label asp-for="Wind"> Wind </label>
			<span class="badge alert-primary">@Model.Wind </span><br />

			<label asp-for="Weather">Weather</label>
			<span class="badge alert-primary">@Model.Weather</span><br />

			<form method="get">
				<button asp-controller="Home" asp-action="SearchByCity" class="btn btn-primary">Go Back</button>
			</form>

		</div>
	</div>
</div>



